<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/mincal_logo"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:src="@drawable/ic_mincal_logo_black"
        app:layout_constraintBottom_toTopOf="@+id/home_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Welcome to MinCal,"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/home_subtitle"
        app:layout_constraintStart_toStartOf="@+id/home_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/mincal_logo" />

    <TextView
        android:id="@+id/home_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="The calculator for\ncreatives."
        android:textSize="44px"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/home_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_title"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/home_start"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="60px"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Let's calculate!"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/home_subtitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/home_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/home_subtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>